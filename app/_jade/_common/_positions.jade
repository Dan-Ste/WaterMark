.settings-position
  .settings-title Положение
  ul.settings-position-list
    li.settings-position-list__item
      .settings-position-map
        ul.settings-position-map-list
          - for (var i = 0; i < 8; i++)
            if i !== 1
              li.settings-position-map-list__item
                label.settings-position-map__label
                  input( type = "radio" name = 'mark-position').settings-position-map__label__unit
            else
              li.settings-position-map-list__item
                label.settings-position-map__label
                  input( type = "radio" checked="checked" name = 'mark-position').settings-position-map__label__unit
    li.settings-position-list__item
      .settings-position-control
        ul.settings-position-control-list
          - var positions = [ 'X', 'Y']
          each item in positions
            li.settings-position-control-list__item
              div(class='position-control-#{item}')
                .position-control-title= item
                .position-control-value
                .position-control-trigger
                  .trigger.trigger__up
                  .trigger.trigger__down
                    .asd


